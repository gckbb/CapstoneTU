<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".Map.MapActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                tools:ignore="MissingConstraints">


                <ImageButton
                    android:id="@+id/back_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="23dp"
                    android:background="@drawable/ic_back"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


                <Button
                    android:id="@+id/nextbutton"
                    android:layout_width="88dp"
                    android:layout_height="47dp"
                    android:layout_marginLeft="250dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/buttonshape1"
                    android:text="선택 완료"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                tools:ignore="MissingConstraints">
                <FrameLayout
                    android:id="@+id/searchBarInputView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <EditText
                        android:id="@+id/searchText"
                        android:layout_width="320dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="21dp"
                        android:background="@drawable/edittext3"
                        android:hint="관광지 / 맛집 검색"
                        android:inputType="text"
                        android:padding="10dp"
                        android:text=""
                        tools:ignore="SpeakableTextPresentCheck" />

                    <ImageButton
                        android:id="@+id/searchButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="290dp"
                        android:background="@drawable/ic_search"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />



                </FrameLayout>


                <Button
                    android:id="@+id/show_button"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="선택\n장소"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/secondbutton"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    tools:ignore="TouchTargetSizeCheck" />



            </LinearLayout>



            <ListView
                android:id="@+id/searchDataListView"
                android:layout_width="370dp"
                android:layout_height="350dp"

                android:layout_marginStart="21dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext"
                android:padding="8dp"

                tools:listitem="@layout/data_list" />



            <FrameLayout
                android:id="@+id/tmapViewContainer"
                android:layout_width="370dp"
                android:layout_height="200dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="10dp"
                tools:ignore="MissingConstraints" />


        </LinearLayout>



        <include
            layout="@layout/bottom_sheet" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout></layout>