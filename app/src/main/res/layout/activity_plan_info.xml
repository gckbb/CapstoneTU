<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


    <ImageButton
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/ic_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.916"
        app:layout_constraintStart_toStartOf="@id/back_btn"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toBottomOf="@+id/home"
        tools:layout_editor_absoluteX="-16dp">

        <LinearLayout
            android:id="@+id/backgroundLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">


            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="30dp"
                android:text="어디로? "
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"

                />


            <TextView
                android:id="@+id/where"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="34dp"
                android:background="@drawable/edittext3"
                android:gravity="center"
                android:hint="지역명"
                android:padding="8dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="18dp"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                tools:layout_marginTop="11dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints"
                tools:layout_marginTop="20dp">


                <TextView
                    android:id="@+id/when"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="언제?"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="*"
                    android:textColor="@color/button"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text=" 필수"
                    android:textColor="@color/button"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints,TextSizeCheck" />

                <TextView
                    android:id="@+id/dateerror"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textSize="14dp"
                    android:layout_marginLeft="7dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints"
                tools:layout_marginTop="11dp">


                <FrameLayout
                    android:id="@+id/firstdayLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:ignore="DuplicateIds">


                    <TextView
                        android:id="@+id/day1txt"
                        android:layout_width="160dp"
                        android:layout_height="40dp"
                        android:background="@drawable/edittext3"
                        android:padding="8dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                    <Button
                        android:id="@+id/day1btn"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/calendar"
                        android:text=""
                        android:translationX="130dp"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="~"
                    android:textColor="@color/black"
                    android:textSize="27dp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints"
                    tools:layout_marginLeft="5dp" />

                <FrameLayout
                    android:id="@+id/lastdayLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/day2txt"
                        android:layout_width="160dp"
                        android:layout_height="40dp"
                        android:background="@drawable/edittext3"
                        android:padding="8dp"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                        tools:layout_marginLeft="5dp" />

                    <Button
                        android:id="@+id/day2btn"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/calendar"
                        android:text=""
                        android:translationX="130dp"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                </FrameLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/who"
                android:layout_width="80dp"
                android:layout_height="21dp"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="20dp"
                android:text="누구와?"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="11dp"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">


                <Button
                    android:id="@+id/friend"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edittext3"
                    android:clickable="false"
                    android:text="친구"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


                <Button
                    android:id="@+id/family"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/edittext3"
                    android:text="가족"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"

                    />

                <Button
                    android:id="@+id/couple"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/edittext3"
                    android:text="애인"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <Button
                    android:id="@+id/alone"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/edittext3"
                    android:text="혼자"
                    android:textColor="@color/black"

                    android:textSize="18dp"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints"
                tools:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/transport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이동수단은?"
                    android:textColor="@color/black"
                    android:textSize="18dp"

                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="*"
                    android:textColor="@color/button"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text=" 필수"
                    android:textColor="@color/button"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints,TextSizeCheck" />
                <TextView
                    android:id="@+id/trans_error"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textSize="14dp"
                    android:layout_marginLeft="7dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="11dp"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">


                <Button
                    android:id="@+id/car"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edittext3"
                    android:clickable="false"
                    android:text="자차"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


                <Button
                    android:id="@+id/bus"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/edittext3"
                    android:text="버스"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"

                    />

                <Button
                    android:id="@+id/taxi"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/edittext3"
                    android:text="택시"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <Button
                    android:id="@+id/walk"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/edittext3"
                    android:text="도보"
                    android:textColor="@color/black"

                    android:textSize="18dp"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            </LinearLayout>

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="20dp"
                android:text="테마?"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="11dp"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">


                <Button
                    android:id="@+id/theme1"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edittext3"
                    android:clickable="false"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


                <Button
                    android:id="@+id/theme2"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/edittext3"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"

                    />

                <Button
                    android:id="@+id/theme3"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/edittext3"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <Button
                    android:id="@+id/theme4"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/edittext3"
                    android:text=""
                    android:textColor="@color/black"

                    android:textSize="18dp"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="20dp"
                android:text="숙소 추가"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="11dp"
                tools:ignore="DuplicateIds">


                <TextView
                    android:id="@+id/booked_room"
                    android:layout_width="160dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edittext3"
                    android:padding="8dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <Button
                    android:id="@+id/searchBtn"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_search"
                    android:text=""
                    android:translationX="130dp"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            </FrameLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints"
            tools:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:text="식당 추가?"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="*"
                android:textColor="@color/button"
                android:textSize="18dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text=" 필수"
                android:textColor="@color/button"
                android:textSize="14dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints,TextSizeCheck" />
            <TextView
                android:id="@+id/trans_error2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:textSize="14dp"
                android:layout_marginLeft="7dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="11dp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">


            <Button
                android:id="@+id/yes"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:background="@drawable/edittext3"
                android:clickable="false"
                android:text="YES"
                android:textColor="@color/black"
                android:textSize="18dp"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


            <Button
                android:id="@+id/no"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edittext3"
                android:text="NO"
                android:textColor="@color/black"
                android:textSize="18dp"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"

                /></LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:text="희망 활동시간?  "
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />


                <ImageButton
                    android:id="@+id/help"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/help"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


                <TextView
                    android:id="@+id/helptxt"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/buttonshape2"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="하루 희망 활동시간을 바탕으로\n경로 생성해드려요!"
                    android:textStyle="bold"
                    android:visibility="gone" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="11dp"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">


                <EditText
                    android:id="@+id/activity_time"
                    android:layout_width="70dp"
                    android:layout_height="38dp"
                    android:background="@drawable/edittext3"
                    android:gravity="center"
                    android:inputType="number"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


                <TextView
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:text="시간"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:text="희망 출발시간? "
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />


                <ImageButton
                    android:id="@+id/help2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="3.5dp"
                    android:background="@drawable/help"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


                <TextView
                    android:id="@+id/helptxt2"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/buttonshape2"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="희망 출발시간을 바탕으로\n경로 생성해드려요!"
                    android:textStyle="bold"
                    android:visibility="gone" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="11dp"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">


                <EditText
                    android:id="@+id/start_time_hour"
                    android:layout_width="70dp"
                    android:layout_height="38dp"
                    android:background="@drawable/edittext3"
                    android:gravity="center"
                    android:inputType="number"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:paddingRight="3dp"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="시"
                    android:textColor="@color/black"
                    android:textSize="18dp"

                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"

                    />

                <EditText
                    android:id="@+id/start_time_min"
                    android:layout_width="70dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/edittext3"
                    android:gravity="center"
                    android:inputType="number"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:paddingRight="3dp"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="분"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"

                    />


            </LinearLayout>

            <Button
                android:id="@+id/nextbutton"
                android:layout_width="360dp"
                android:layout_height="47dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/buttonshape1"
                android:text="다음"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>