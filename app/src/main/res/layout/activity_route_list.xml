<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">



    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/ic_back"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


        <Button
            android:id="@+id/nextbutton"
            android:layout_width="83dp"
            android:layout_height="47dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="257dp"
            android:text="다음"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/buttonshape1"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/top0"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="35dp"
        android:orientation="horizontal"
        android:layout_marginLeft="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top">

        <FrameLayout
            android:layout_width="235dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/dateoutline">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/day1"
                    android:layout_width="47dp"
                    android:layout_height="48dp"
                    android:background="@drawable/first" />

                <Button
                    android:id="@+id/day2"
                    android:layout_width="47dp"
                    android:layout_height="47dp"

                    android:background="@drawable/middle" />

                <Button
                    android:id="@+id/day3"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:background="@drawable/middle" />

                <Button
                    android:id="@+id/day4"
                    android:layout_width="47dp"
                    android:layout_height="47dp"
                    android:background="@drawable/middle" />


                <Button
                    android:id="@+id/day5"
                    android:layout_width="46dp"
                    android:layout_height="48dp"
                    android:background="@drawable/last" />

            </LinearLayout>
        </FrameLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/placeListContainer1"
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/top0"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="260dp"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/totalTime_1"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:hint="0.0시간"
                android:text=""
                android:textColor="@color/black"
                android:textSize="18dp"
                tools:ignore="SpeakableTextPresentCheck,TextSizeCheck" />
        </LinearLayout>

        <ListView
            android:id="@+id/listView1"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext3"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="25dp"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

