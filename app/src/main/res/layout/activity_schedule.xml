<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Map.ScheduleActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="31dp"
            android:background="@drawable/ic_back"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp"

            android:text="내 여행"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="226dp"
            android:layout_marginTop="31dp"
            android:background="@drawable/ic_home"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/placename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="25dp"
            android:hint="place"
            android:text=""
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/who"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"

            android:text=""
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/date1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="yy.mm.dd"
            android:text=""
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="~"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="yy.mm.dd"
            android:text=""
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/domitory"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:background="@drawable/buttonshape2"
            android:text="숙소" />

        <Button
            android:id="@+id/checkList"
            android:layout_width="85dp"
            android:layout_height="25dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/buttonshape2"
            android:text="체크리스트" />


        <Button
            android:id="@+id/cash"
            android:layout_width="68dp"
            android:layout_height="25dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/buttonshape2"
            android:text="가계부" />

        <Button
            android:id="@+id/invite"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/buttonshape2"
            android:text="초대" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/leftBtn"
            android:layout_width="15dp"
            android:layout_height="18dp"
            android:background="@drawable/left"
            android:layout_marginEnd="8dp"

            />
        <!--날짜 버튼 -->
        <FrameLayout
            android:layout_width="320dp"
            android:layout_height="40dp"

            android:background="@drawable/dateoutline">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/day1"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/first" />

                <Button
                    android:id="@+id/day2"
                    android:layout_width="40dp"
                    android:layout_height="37dp"

                    android:background="@drawable/middle" />

                <Button
                    android:id="@+id/day3"
                    android:layout_width="40dp"
                    android:layout_height="37dp"
                    android:background="@drawable/middle" />

                <Button
                    android:id="@+id/day4"
                    android:layout_width="40dp"
                    android:layout_height="37dp"
                    android:background="@drawable/middle" />

                <Button
                    android:id="@+id/day5"
                    android:layout_width="40dp"
                    android:layout_height="37dp"
                    android:background="@drawable/middle" />

                <Button
                    android:id="@+id/day6"
                    android:layout_width="40dp"
                    android:layout_height="37dp"
                    android:background="@drawable/middle" />

                <Button
                    android:id="@+id/day7"
                    android:layout_width="40dp"
                    android:layout_height="37dp"
                    android:background="@drawable/middle" />


                <Button
                    android:id="@+id/day8"
                    android:layout_width="40dp"
                    android:layout_height="37dp"
                    android:background="@drawable/last" />

            </LinearLayout>


        </FrameLayout>

        <Button
            android:id="@+id/rightBtn"
            android:layout_width="15dp"
            android:layout_height="18dp"
            android:background="@drawable/right"
            android:layout_marginStart="8dp"

            />
    </LinearLayout>


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <!--1일째-->
        <LinearLayout
            android:id="@+id/placeListContainer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">


            <ListView
                android:id="@+id/placeListView1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/edittext3" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"


                >

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <Button
                        android:id="@+id/path_1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="35dp"
                        android:background="@drawable/map"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        tools:ignore="TouchTargetSizeCheck" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="이동\n예상 시간"
                        android:textColor="@color/black" />
                </FrameLayout>

                <ImageView
                    android:id="@+id/line1_0_1"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/dashline"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/time1_1"
                    android:layout_width="50dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/ellipse"

                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/black"
                    android:visibility="gone" />

